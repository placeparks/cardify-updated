            <span className="text-cyber-cyan text-[10px]">
              {uploadStatus ? (
                uploadStatus.upload_count < 25 && uploadStatus.upload_package_count === 0
                  ? 'â€¢ 25 initial uploads available â€¢ After that: 100 credits ($0.25) for 10 uploads'
                  : 'â€¢ 100 credits ($0.25) for 10 uploads'
