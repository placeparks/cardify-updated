useEffect(() => {
  const sb = getSupabaseBrowserClient()
  if (!deviceId) return                

  // bootstrap auth
  sb.auth.getUser().then(({ data }) => setUser(data.user ?? null))
  const { data: authSub } =
    sb.auth.onAuthStateChange((_e, sess) => setUser(sess?.user ?? null))

  return () => authSub.subscription.unsubscribe()
}, [deviceId])

